#define GPG3CON 0xE03001C0
#define GPG3DAT 0xE03001C4
//LED: GPG3CON : 0xE03001C0
//0001 = Output
//GPG3DAT, R/W, Address = 0xE030_01C4
int led_init()
{
	int *p = (int *)GPG3CON;

	//设为输出模式
	*p = *p & ~(0xf << 0);
	*p = *p | (1 << 0);

	return 0;
}

int led_on()
{
	int *p = (int *)GPG3DAT;

	*p = *p | (1 << 0);

	return 0;
}

int led_off()
{
	int *p = (int *)GPG3DAT;

	*p = *p & ~(1 << 0);

	return 0;
}

void delay(int time)
{
	int i,j;

	for (i = 0; i < time * 500; i++)
	{
		for (j = 0; j < time * 5000; j++)
		{
			;
		}
	}
	return;
}

int main()
{
	led_init();

	while (1)
	{
			led_on();

			//delay(1);

			led_off();
			delay(1);

	}
	return 0;
}
